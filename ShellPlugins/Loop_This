#----------------------------------------------------------------------------------
# Doesn't seem to work, unless I've just forgotten something key. I believe the
# purpose of this script was to somewhat mimic the watch command, albeit basically.
#----------------------------------------------------------------------------------

loop(){
	ERR(){ printf "[L%0.4d] ERROR: %s\n" "$1" "$2" 1>&2; }

	if ! [ -x /bin/sleep ]; then
		ERR "$LINENO" "Dependency '/bin/sleep' not met."
		return 1
	elif [ $# -eq 0 ]; then
		ERR "$LINENO" "Command(s) required before looping can begin."
		return 1
	else
		printf "\ec"
		while :; do
			printf "\ec\eH"
			/bin/sleep 0.3
			$@
		done
	fi
}

# vim: ft=sh noexpandtab colorcolumn=84 tabstop=8 noswapfile nobackup
