case `printf "%(%F)T" -1` in
	2018-02-14) printf "REMINDER: It's St. Valentine's Day.\n" ;;
	2018-12-24) printf "REMINDER: It's Christmas Eve.\n" ;;
	2018-12-25) printf "REMINDER: It's Christmas Day.\n" ;;
	2019-01-01) printf "REMINDER: It's New Year's day.\n" ;;
esac

